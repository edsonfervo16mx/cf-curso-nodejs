extends ../layout.pug
block contenido
	h1 Welcome a Example NodeJS - MongoDB
	div(id="imagenes")
		for imagen in imagenes
			div(class="img-container")
				a(href="/app/imagenes/"+imagen._id+"")
					h2 #{imagen.title}
				img(src="/files/img/"+imagen._id+"."+imagen.extension+"" class="img-responsive")
				if(typeof imagen.creator != "undefined")
					p Creado por #{imagen.creator.email}
	script(id="image-template" type="text/x-handlebars-template")
		div(class="img-container")
			a(href="/app/imagenes/{{id}}")
				h2 {{title}}
			img(src="/files/img/{{id}}.{{extension}}" class="img-responsive")
	script
		include ../../public/javascript/client.js